    <div id="top-container" class="container-fluid">
        <h1 id="main-title" class="text-center">Seek for the job of your dreams</h1>
        <p id="main-subtitle" class="text-center">
            We are the website with the most tech vacancies on the market 
        </p>
        <form id="search-form" class="form-inline" action="/" method="get">
            <div class="form-group col-md-10">
                <input type="text" class="form-control" id="job" name="job" placeholder="Type the vacancy you are seeking for">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Seek</button>
            </div>
        </form>
    </div>
    <main>
        <div id="jobs-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if search}}
                    <h2 id="job-list-title">Seeking for vacancies that contains: {{search}}</h2>
                    {{else}}
                    <h2 id="job-list-title">Check it out our featured vacancies</h2>
                    {{/if}}
                    <ul id="job-list" class="list-group">
                        {{#each jobs}}
                        <li class="list-group-item {{#if dataValues.new_job}}new-job{{/if}}">
                            <img src="/img/company.svg" alt="Company">
                            <p>{{dataValues.company}}</p>
                            <h2>{{dataValues.title}}</h2>
                            <p>$ {{dataValues.salary}}</p>
                            <span class="new-job-label">New</span>
                            <a class="btn btn-primary">See vacancy</a>
                        </li>
                        {{/each}}
                    </ul> 
                </div>
            </div>
        </div>
    </main>